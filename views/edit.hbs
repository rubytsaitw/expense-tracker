<div class="col-12 col-lg-6 col-xl-4 mx-auto my-5">
  <form action="/records/{{ record._id }}?_method=PUT" method="POST">
    <div class="form-group form-row">
      <label for="name" class="col-md-4 col-form-label">
        項目
      </label>
      <div class="col-md-8">
        <input type="text" name="name" class="form-control" id="name" value="{{ record.name}}" required>
      </div>
    </div>
    <div class="form-group form-row">
      <label for="category" class="col-md-4 col-form-label" required>
        類別
      </label>
      <select name="category" id="category">
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
    {{!-- icon --}}
    <div class="form-group form-row">
      <div class="col-md-8">
        <input name="icon" value="fa-pen">
      </div>
    </div>

    <div class="form-group form-row">
      <label for="date" class="col-md-4 col-form-label" value={{ dateToString record.date}} required>
        日期
      </label>
      <div class="col-md-8">
        <input type="date" name="date" class="form-control" id="date">
      </div>
    </div>
    <div class="form-group form-row">
      <label for="amount" class="col-md-4 col-form-label" value={{ record.amount}}>
        金額
      </label>
      <div class="col-md-8">
        <input type="number" name="amount" class="form-control" id="amount" min="0">
      </div>
    </div>

    <button class="btn btn-primary mt-3" type="submit">修改支出</button>
  </form>
</div>