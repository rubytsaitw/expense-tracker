<div class="col-12 col-lg-6 col-xl-4 mx-auto my-5">
  <div class="row">
    <div class="col-md-3 fs-7">*必填欄位</div>
    <div class="col-md-9 text-center">請輸入你的支出</div>
  </div>
  <form action="/records" method="POST">
    {{!-- Name --}}
    <div class="form-group row mt-4">
      <label for="name" class="col-md-3 col-form-label">
        名稱*：
      </label>
      <div class="col-md-9">
        <input type="text" name="name" class="form-control" id="name" required>
        <div class="invalid-feedback">
          This field is necessary.
        </div>
      </div>
    </div>
    {{!-- Date --}}
    <div class="form-group row mt-3">
      <label for="date" class="col-md-3 col-form-label">
        日期*：
      </label>
      <div class="col-md-9">
        <input type="date" name="date" class="form-control" id="date" required>
      </div>
    </div>
    {{!-- Category --}}
    <div class="form-group row mt-3">
      <label for="category" class="col-md-3 col-form-label">
        類別*：
      </label>
      <div class="col-md-9">
        <select class="form-control" name="category" id="category" required>
          <option value="" selected>Select</option>
          {{#each categories}}
          <option value="{{ this.title }}">{{ this.title }}</option>
          {{/each}}
        </select>
      </div>
    </div>
    {{!-- Amount --}}
    <div class="form-group row mt-3">
      <label for="amount" class="col-md-3 col-form-label">
        金額*：
      </label>
      <div class="col-md-9">
        <input type="number" name="amount" class="form-control" id="amount" min="0" required>
      </div>
    </div>
    {{!-- Merchant --}}
    <div class="form-group row mt-3">
      <label for="merchant" class="col-md-3 col-form-label">
        店家：
      </label>
      <div class="col-md-9">
        <input type="text"" name="merchant" class="form-control" id="merchant" min="0">
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-9 d-flex justify-content-center">
        <button class="btn btn-primary btn- mt-4" type="submit">新增支出</button>
      </div>
    </div>
  </form>
</div>